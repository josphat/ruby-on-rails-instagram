<div class="col-md-6 col-md-offset-3">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Change your password</h2>
      </div>
      <div class="panel-body">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.email_field :password, label: "New password", required: true, autofocus: true, class: "form-control", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation %>
            <%= f.email_field :password_confirmation, label: "Confirm your new password", required: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.button :submit, "Change my password", class: "btn btn-info" %>
          </div>
        <% end %>
      </div>
    <div class="panel-footer">
    <%= render "devise/shared/links" %>
    </div>
  </div>
  </div>
</div>
